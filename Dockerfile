# Generated by https://smithery.ai. See: https://smithery.ai/docs/config#dockerfile
FROM node:lts-alpine

# Create app directory
WORKDIR /app

# Copy package files and install dependencies
COPY package*.json ./

# Install dependencies without running scripts (we explicitly run build later)
RUN npm install --ignore-scripts

# Copy the rest of the source code
COPY . .

# Build the TypeScript code
RUN npm run build

# Expose necessary port if needed (optional, since MCP communicates via stdio)
# EXPOSE 3000

# Command to run the MCP server in MCP mode
CMD [ "node", "dist/index.js", "--mcp" ]
