{
  "name": "kick-mcp",
  "version": "1.0.1",
  "description": "A Model Context Protocol server for Kick API integration",
  "main": "dist/index.js",
  "bin": {
    "kick-mcp": "dist/bin/mcp.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "nodemon --exec ts-node src/index.ts",
    "mcp": "node dist/index.js --mcp",
    "mcp:prod": "node dist/bin/mcp.js",
    "test": "jest",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "clean": "node -e \"if (require('fs').existsSync('./dist')) require('fs').rmSync('./dist', { recursive: true, force: true });\"",
    "prebuild": "npm run clean"
  },
  "dependencies": {
    "axios": "^1.6.7",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "json-rpc-2.0": "^1.0.0",
    "winston": "^3.11.0",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.19",
    "@types/ws": "^8.5.10",
    "eslint": "^8.56.0",
    "@typescript-eslint/parser": "^7.0.1",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/NosytLabs/KickMCP.git"
  },
  "keywords": [
    "kick",
    "api",
    "mcp",
    "streaming"
  ],
  "author": "NosytLabs",
  "license": "MIT"
}
