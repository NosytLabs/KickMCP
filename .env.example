# Kick MCP Server Environment Configuration Example
# Copy this file to .env and adjust values as needed

# ======================
# REQUIRED SETTINGS (Manual Installation Only)
# ======================

# OAuth Configuration
KICK_CLIENT_ID=your_client_id_here
KICK_CLIENT_SECRET=your_client_secret_here
KICK_REDIRECT_URI=http://localhost:3000/auth/callback

# ======================
# SERVER CONFIGURATION
# ======================

# Server operating mode 
# - false: MCP mode (JSON-RPC over stdin/stdout)
# - true: HTTP/WebSocket server mode
HTTP_MODE=false

# Port for HTTP server (only used if HTTP_MODE=true)
PORT=3000

# Node environment (development, production, test)
NODE_ENV=development

# Logging verbosity (error, warn, info, debug)
LOG_LEVEL=info

# ======================
# PERFORMANCE SETTINGS
# ======================

# API request timeout in milliseconds
API_TIMEOUT=10000

# Rate limit settings
RATE_LIMIT=60
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Caching settings
CACHE_TTL=300
CACHE_CLEANUP_INTERVAL=600

# ======================
# WEBSOCKET SETTINGS
# ======================

# WebSocket ping interval in milliseconds (keepalive)
WEBSOCKET_PING_INTERVAL=30000

# ======================
# IDLE TIMEOUT
# ======================

# Server idle timeout in milliseconds (5 minutes default)
# Server will shut down if no activity for this duration
IDLE_TIMEOUT=300000

# ======================
# KICK API CONFIGURATION
# ======================

# Base URL for Kick API (usually doesn't need changing)
KICK_API_BASE_URL=https://kick.com/api/v2

# Security Configuration
SESSION_SECRET=your_session_secret_here
COOKIE_SECRET=your_cookie_secret_here

# Webhook Configuration (Optional)
WEBHOOK_URL=https://your-domain.com/webhooks/kick
WEBHOOK_SECRET=your_webhook_secret_here 